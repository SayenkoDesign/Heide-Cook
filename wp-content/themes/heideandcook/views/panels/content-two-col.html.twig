<div class="generic-content">
    <div class="row">
        <div class="medium-6 large-4 columns">
            <h3 class="green-header">{{ SP.ACF.get_sub_field('title') }}</h3>
            <div class="content">
                {{ SP.ACF.get_sub_field('content') }}
            </div>
            {% if SP.ACF.get_sub_field('button_type') == 'contact' %}
                <a href="#" class="contact-scroll button">{{ SP.ACF.get_sub_field('button_text') }}</a>
            {% elseif SP.ACF.get_sub_field('button_type') == 'quote' %}
                <a href="#quote-lightbox" class="fancybox button">{{ SP.ACF.get_sub_field('button_text') }}</a>
            {% else %}
                <a href="{{ SP.ACF.get_sub_field('button_url') }}" class="button">{{ SP.ACF.get_sub_field('button_text') }}</a>
            {% endif %}
        </div>
        <div class="medium-6 large-8 columns">
            <img src="{{ SP.ACF.get_sub_field('image').url }}" alt="{{ SP.ACF.get_sub_field('title') }}">
        </div>
    </div>
</div>
