<div class="capabilities-grid">
    <div class="row column">
        <h2 class="green-header centered">{{ SP.ACF.get_sub_field('title') }}</h2>
    </div>
    <div class="row small-up-1 medium-up-2">
        {% for block in SP.ACF.get_sub_field('blocks') %}
            <div class="column" id="capability-{{ loop.index }}">
                <img src="{{ block.image.url }}" alt="">
                <h4 class="green-header">{{ block.title }}</h4>
                <div class="content">
                    {{ block.content }}
                </div>
            </div>
        {% endfor %}
    </div>
</div>
